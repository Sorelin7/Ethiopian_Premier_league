<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/abimage"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:src="@drawable/abubakirnasir" />

        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="93dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="#F40D0D"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:textColor="#EF0909"

                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textview33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textColor="#EF1313"

                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textview44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disc"
                android:textColor="#F30D0D"

                android:textSize="16sp"
                android:textStyle="normal|bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/positionn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textColor="@color/black"

                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/agee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/black"

                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="discrption:"
                android:textColor="@color/black"

                android:textSize="16sp"
                android:textStyle="normal|italic" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>